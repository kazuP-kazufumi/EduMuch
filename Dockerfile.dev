# 開発用の Ruby イメージ
FROM ruby:3.2

# 作業ディレクトリを設定
WORKDIR /app

# 必要なパッケージをインストール
RUN apt-get update -qq && \
    apt-get install -y nodejs npm postgresql-client && \
    npm install -g yarn && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Rails の新規プロジェクト作成に必要な gem をインストール
RUN gem install rails

# コンテナ起動時にシェルを起動（rails new を実行できるようにする）
CMD ["/bin/bash"]
