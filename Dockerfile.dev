# 開発用の Ruby イメージ
FROM ruby:3.2

# 作業ディレクトリを設定
WORKDIR /app

# 必要なパッケージをインストール
RUN apt-get update -qq && \
    apt-get install -y nodejs npm postgresql-client && \
    npm install -g yarn && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Gemfileとgemspec（存在する場合）をコピー
COPY Gemfile* ./

# bundle installを実行
RUN bundle install

# アプリケーションのソースをコピー
COPY . .

# コンテナ起動時のコマンドを設定
CMD ["bash"]
